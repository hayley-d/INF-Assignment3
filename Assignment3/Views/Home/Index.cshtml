@{
    ViewBag.Title = "Home Page";
}

@model Assignment3.Models.HomeViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<div style="height:100px;">

</div>
<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <div style="display:grid; grid-template-columns: 7fr 3fr; justify-content:center; align-items:center;height:150px;">
                <div><h2>Students</h2></div>
                <div><button class="btn btn-success btn-sm" onclick="openStudentCreateModal()">Create</button></div>
            </div>
            <div style="overflow-y:scroll; height:250px;">
                <table class="table table-md table-striped table-hover">
                    <thead class="thead-dark" style="font-size:16px; ">
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Surname
                            </th>
                            <th>
                                Birth Date
                            </th>
                            <th>
                                Gender
                            </th>
                            <th>
                                Class
                            </th>
                            <th>
                                Point
                            </th>
                            <th></th>
                        </tr>
                    </thead>


                    @foreach (var item in Model.Students)
                    {
                        <tr style="font-size:14px; ">
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.birthdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.@class)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.point)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div style="display: grid; grid-template-columns: 7fr 3fr; justify-content: center; align-items: center; height: 150px;">
                <div><h2>Books</h2></div>
                <div><button class="btn btn-success btn-sm" onclick="openBookCreateModal()">Create</button></div>
            </div>
            <div style="overflow-y:scroll; height:250px;">
                <table class="table table-md table-striped table-hover">
                    <thead class="thead-dark" style="font-size:16px; ">
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Page Count
                            </th>
                            <th>
                                Point
                            </th>
                            <th>
                                Author Name
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Status
                            </th>
                            <th></th>
                        </tr>
                    </thead>


                    @foreach (var item in Model.Books)
                    {
                        <tr style="font-size:14px;">
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.pagecount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.point)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.author.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type.name)
                            </td>
                            <td>
                                @Model.getStatus(item.bookId)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
<div style="height:60px;">

</div>


<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">

                <div id="FormContainer"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal()" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>

    function openStudentCreateModal() {
        $.ajax({
            url: '@Url.Action("Create", "students")/',
            type: 'GET',
            success: function (data) {
                $('#FormContainer').html(data);
                $('#Modal').modal('show');
            },
            error: function () {
                alert('Failed to load the create form.');
            }
        });
    }

    function openBookCreateModal() {
        $.ajax({
            url: '@Url.Action("Create", "books")/',
            type: 'GET',
            success: function (data) {
                $('#FormContainer').html(data);
                $('#Modal').modal('show');
            },
            error: function () {
                alert('Failed to load the create form.');
            }
        });
    }

    function closeModal() {
        $('#Modal').modal('hide');
    }
</script>